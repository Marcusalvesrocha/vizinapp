<li class="list-group-item">
  <div class="d-flex justify-content-between">
    <div class="d-flex justify-content-start">
      <i class="fa-regular fa-calendar px-2" style="color:#F2CC8F;"></i>
      <p> <small><%= schedule.start_time.strftime('%m/%d') %></small> </p>
    </div>
    <div>
      <p><small><%= schedule.name %></small></p>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to edit_schedule_path(schedule) do %>
        <i class="fa-solid fa-pen-to-square" style="color:#81B29A;"></i>
      <% end %>
      <%= link_to notes_path do %>
        <i class="fa-solid fa-circle-xmark px-3" style="color:#a92022;"></i>
      <% end %>
    </div>
  </div>
</li>
