<li class="list-group-item">
  <div class="d-flex justify-content-between">
    <div class="d-flex justify-content-start">
      <i class="fa-regular fa-calendar px-2 pt-1" style="color:#F2CC8F;"></i>
      <% if meeting.schedule_date? %>
        <p> <small><%= meeting.schedule_date.strftime('%d/%m') %></small> </p>
      <% end %>
    </div>
    <div>
      <p><small><%= meeting.area.name %></small></p>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to edit_meeting_path(meeting) do %>
        <i class="fa-solid fa-pen-to-square" style="color:#81B29A;"></i>
      <% end %>
      <%= link_to meeting_path(meeting), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" } do %>
        <i class="fa-solid fa-circle-xmark px-3" style="color:#a92022;"></i>
      <% end %>
    </div>
  </div>
</li>
