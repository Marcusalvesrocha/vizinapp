        <img class="card-image w-75" src="https://i.ibb.co/ZTxpr1H/undraw-Online-shopping-re-k1sv.png" alt="commerce">
      </div>
      <div class="card-body">
        <h6 class="subtitle mt-0">Bazar</h6>
        <p class="card-text"><small>Compre, venda, anúncie seu serviço!</small></p>
        <%= link_to "Ir para o Bazar", detachments_path, class:"btn btn-primary btn-sm position-absolute bottom-0 start-50 translate-middle" %>
      </div>
