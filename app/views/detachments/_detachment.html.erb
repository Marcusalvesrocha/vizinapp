<li class="list-group-item">
  <div class="d-flex justify-content-between">
    <div class="d-flex justify-content-start">
      <i class="fa-regular fa-calendar px-2" style="color:#F2CC8F;"></i>

        <p> <small><%= detachment.detachment_category.name %></small> </p>

    </div>
    <div>
      <p><small><%= detachment.title %></small></p>
    </div>
    <div class="d-flex justify-content-center">
      <%= link_to edit_detachment_path(detachment) do %>
        <i class="fa-solid fa-pen-to-square" style="color:#81B29A;"></i>
      <% end %>
      <%= link_to detachment_path(detachment), data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" } do %>
        <i class="fa-solid fa-circle-xmark px-3" style="color:#a92022;"></i>
      <% end %>
    </div>
  </div>
</li>
