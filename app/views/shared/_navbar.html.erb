<div class="navbar navbar-expand-sm navbar-vizinapp">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://i.ibb.co/9GNqNy1/2.png", style: "height:80px; width:80px;" %>
      <%= image_tag "https://i.ibb.co/FmyhFSp/1.png", style: "height:50px; width:50px;" %>
      <%= link_to "Home", apartaments_path, class: "btn" %>
      <%= link_to "Mural de Recados", notes_path, class: "btn" %>
      <%= link_to "Documentos", documents_path, class: "btn" %>
      <%= link_to "Agenda", schedules_path, class: "btn" %>
      <%= link_to "Formulários", "#", class: "btn" %>
      <%= link_to "Chat", "#", class: "btn" %>
    <% end %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mt-2">
        <li class="nav-item">
          <p class="condo-user-type"><%= current_user.admin ? "Síndico" : "Morador" %></p>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.avatar.key? %>
            <%= cl_image_tag current_user.avatar.key, crop: :thumb, gravity: :face, class: "avatar-sm dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png", class: "avatar-sm dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <p class="dropdown-item"><%= link_to "Página inicial", apartaments_path, class: "dropdown-item" %></p>
            <%=link_to "Sair", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
